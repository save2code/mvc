                        <label class="col-md-3 control-label">Disposal Request Date</label>
                        <div class="col-md-3">
                            <input type="date" name="DispReqdt" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Data Center Removal Date</label>
                        <div class="col-md-3">
                            <input type="date" name="DCRemovaldt" class="form-control" />
                        </div>
                    </div>
                    <!-- Billing Section End-->
                    <!-- Billing Panel End-->
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div id="divcollapse" class="panel-heading">
                <h3 class="panel-title" data-toggle="collapse" data-parent="#accordion" href="#collapse3">
                    <span class="glyphicon glyphicon-globe"></span>
                    <b> Location Information</b>
                </h3>
            </div>
            <div id="collapse3" class="panel-collapse collapse">
                <div class="panel-body">
                    <!-- Location Panel Start-->
                    <!-- Location Section Start-->
                    <div class="form-group">
                        <label class="col-md-3 control-label">Data Center</label>
                        <div class="col-md-3">
                            <select class="form-control" name="DataCenter">
                                <option>----Select----</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Rack Number</label>
                        <div class="col-md-3">
                            <select class="form-control">
                                <option>----Select----</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Slot</label>
                        <div class="col-md-3">
                            <select class="form-control">
